
<%= image_tag('Theater.png',alt: "",class:"rounded mx-auto d-block") %>
<p id="notice"><%= notice %></p>

    <% @theaters.each do |theater| %>
        <div class="card">
          <h5 class="card-header">Theater name:</h5>
            <div class="card-body">
              <h4 class="card-title"><%= theater.theater_name %></h4>
              <p class="card-title">Theater location:</p>
              <p class="card-text"><%= theater.theater_location %></p>
                <form action="/theatre_booking_redirect/<%=params[:id]%>/<%=theater.id%>" method="post">
                  <button type="submit" class="btn btn-outline-dark"> Book </button> 
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                </form>
        </div>
    <% end %>



