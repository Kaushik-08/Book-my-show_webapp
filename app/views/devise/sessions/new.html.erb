<%= image_tag('login-img.png',alt: "",id:"login-img") %>

    <div class="login">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="field">
                        <b><%= f.label :email %><br /></b>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id:"form-field-login"%>
                      </div>

                      <div class="field">
                        <b><%= f.label :password %><br /></b>
                        <%= f.password_field :password, autocomplete: "current-password" ,id:"form-field-login"%>
                      </div>

                      <% if devise_mapping.rememberable? %>
                        <div class="field">
                          <b><%= f.check_box :remember_me %>
                          <%= f.label :remember_me %></b>
                        </div>
                      <% end %>

                      <div class="actions">
                        <%= f.submit "Log in" ,id:"login-btn"%>
                      </div>
            <% end %>
            
            <div id="sgn-btn">
                <b><p>Create An Account !<%= render "devise/shared/links" %></p> </b>
            </div>
    </div>
